<% provide(:title, "Sign Up") %>

<h1>Sign Up to Add Your Stories</h1>

<%= form_for(@user) do |f| %>
  <%= f.label(:username) %>
  <%= f.text_field(:username) %>
  <br />
  <%= f.label(:email) %>
  <%= f.email_field(:email) %>
  <br />
  <%= f.label(:password) %>
  <%= f.password_field(:password) %>
  <br />
  <%= f.submit %>
<% end %>