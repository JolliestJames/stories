<h1>All Users</h1>

<table>
  <thead>
    <tr>
      <td>First Name</td>
      <td>Last Name</td>
      <td>Email</td>
      <td>Password</td>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="user-row" id="<%= dom_id(user) %>">
        <td class="first_name"><%= user.first_name %></td>
        <td class="last_name"><%= user.last_name %></td>
        <td class="email"><%= user.email %></td>
        <td class="password"><%= user.password %></td>
      </tr>
    <% end %>
  </tbody>
</table>