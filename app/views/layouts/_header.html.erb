<header class="navbar navbar-fixed-top navbar-inverse header">
  <div class="container">
    <%= link_to "Stories", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          Logged in as <strong><%= current_user.username %></strong>.
          <li><%= link_to 'Edit profile', edit_profile_path, :class => 'navbar-link' %></li>
          <li><%= link_to "Logout", logout_path, method: :delete, :class => 'navbar-link'  %></li>
        <% else %>
          <li><%= link_to "Log in", login_path, :class => 'navbar-link' %></li>
          <li><%= link_to "Register", register_path, :class => 'navbar-link' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>