<% provide(:title, "All Stories") %>

<h1>All Stories</h1>

<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>Owner</td>
      <td>Description</td>
    </tr>
  </thead>
  <tbody>
    <% @stories.each do |story| %>
      <tr class="story-row" id="<%= dom_id(story) %>">
        <td class="name"><%= story.name %></td>
        <td class="username"><%= story.user.username %></td>
        <td class="description"><%= story.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>