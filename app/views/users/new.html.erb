<h1>New User</h1>

<%= form_for(@user) do |f| %>
  <%= f.label(:first_name) %>
  <%= f.text_field(:first_name) %>
  <br />
  <%= f.label(:last_name) %>
  <%= f.number_field(:last_name) %>
  <br />
  <%= f.label(:email) %>
  <%= f.number_field(:email) %>
  <br />
  <%= f.label(:password) %>
  <%= f.text_field(:password) %>
  <br />
  <%= f.submit %>
<% end %>