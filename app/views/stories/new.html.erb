<% provide(:title, "New Story") %>

<h1>What's your story?</h1>

<%= form_for(@story) do |f| %>
  <%= f.label(:name) %>
  <%= f.text_field :name, :required => true %>
  <br />
  <%= f.label(:description) %>
  <%= f.text_field :description, :required => true %>
  <br />
  <%= f.submit "Create Story" %>
<% end %>