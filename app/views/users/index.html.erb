<% provide(:title, "All Users") %>

<h1>All Users</h1>

<table>
  <thead>
    <tr>
      <td>Username</td>
      <td>Email</td>
      <td>Password</td>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="user-row" id="<%= dom_id(user) %>">
        <td class="username"><%= user.username %></td>
        <td class="email"><%= user.email %></td>
        <td class="password"><%= user.password %></td>
      </tr>
    <% end %>
  </tbody>
</table>